<%- include('../../fragments/header.ejs') %>

    <main>
        <h2>Lista produktów</h2>
        <div class="lista">
            <table class="table-list">
                <thead>
                    <tr>
                        <th scope="col">Nazwa</th>
                        <th scope="col">Typ produktu</th>
                        <th scope="col">Ilość</th>
                        <th scope="col">Cena</th>
                        <th scope="col">Kolor</th>
                        <th scope="col">Akcje</th>
                    </tr>
                </thead>


                <tbody>
                    <% for (let produktList of produktLists) { %>
                        <tr>
                            <td><%= produktList.Nazwa %></td>
                            <td><%= produktList.TypProduktu %></td>
                            <td><%= produktList.Gwarancja %></td>
                            <td><%= produktList.Cena %></td>
                            <td><%= produktList.Kolor %></td>
                            <td>
                                <ul class="list-actions">
                                    <li><a href="/employees/details/<%=produktList._id%>" class="list-actions-button-details">Szczegóły</a></li>
                                    <li><a href="/employees/edit/<%=produktList._id%>" class="list-actions-button-edit">Edytuj</a></li>
                                    <li><a href="/employees/delete/<%=produktList._id%>" class="list-actions-button-delete">Usuń</a></li>
                                </ul>
                            </td>
                        </tr>
                    <% } %>
                    </tbody>


