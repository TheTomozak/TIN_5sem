<%- include('../../fragments/header.ejs') %>

<main>
    <script type="application/javascript" src="/JS/walidacjaPozycjiZamowien.js"></script>
    <h2><%= pageTitle %></h2>
    <form class="form" method="post" action="<%=formAction%>" novalidate onsubmit="return validateForm();">

        <label for="Zamówienie">Kupiec:<sup>*</sup></label>
        <select id="zamowienie" name="IdZamowienie" required <%= (formMode == 'showDetails') ? 'disabled' : ''%>>
            <option value="" selected>--- Wybierz kupca ---</option>
            <% for (let i=0; i<allZamowienia.length; i++) { let zamowienie = allZamowienia[i]; %>
            <option value="<%= zamowienie.IdZamowienie %>" label="<%= zamowienie.Imie + ' ' + zamowienie.Nazwisko %>"
                <%= (pozycjaZamowien.IdZamowienieProdukt && zamowienie.IdZamowienie.toString() == pozycjaZamowien.zamowienie.IdZamowienie.toString()) ? 'selected' : ''%>></option>
            </option>
            <% } %>
        </select>
        <span id="errorZamowienie" class="errors-text"></span>


        <label for="Produkt">Nazwa produktu:<sup>*</sup></label>
        <select name="produkt" id="IdProdukt">
            <option value="">--- Wybierz produkt ---</option>
            <% for (let i=0; i<allpozycjaZamowien.length; i++) { let produkt = allpozycjaZamowien[i]; %>
                <option value="<%= produkt.produkty.IdProduktu %>" label="<%= produkt.produkty.Nazwa %>"
                    <%= (pozycjaZamowien.IdZamowienieProdukt && produkt.produkty.IdProduktu.toString() == produkt.produkty.IdProduktu.toString()) ? 'selected' : ''%>></option>
                </option>
                <% } %>
        </select>
        <span id="errorProdukt" class="errors-text"></span>

        <label for="Rabat">Rabat(%):</label>
        <input type="number" name="Rabat" id="Rabat" />
        <span id="errorRabat" class="errors-text"></span>

        <label for="Ilość">Ilość:<sup>*</sup></label>
        <input type="number" name="Ilość" id="Ilosc" />
        <span id="errorIlosc" class="errors-text"></span>

        <div class="form-buttons">
            <p id="errorsSummary" class="errors-text"></p>
            <input class="form-button-submit" type="submit" value="Dodaj" />
            <a href="/PozycjaZamowien" class="form-button-cancel">Anuluj</a>
        </div>
    </form>
</main>

<%- include('../../fragments/footer.ejs') %>