<%- include('../../fragments/header.ejs') %>

    <main>
        <h2>Lista pozycji zamówień</h2>
        <div class="lista" >
        <table class="table-list">
            <thead>
                <tr>
                    <th scope="col">Imie</th>
                    <th scope="col">Nazwisko</th>
                    <th scope="col">Ilość</th>
                    <th scope="col">Nazwa produktu</th>
                    <th scope="col">Akcje</th>

                </tr>
            </thead>
            <tbody>
                <% for (let pozycjaZamowien of pozycjaZamowienList) { %>
                    <tr>
                        <td><%= pozycjaZamowien.zamowienia.Imie %></td>
                        <td><%= pozycjaZamowien.zamowienia.Nazwisko %></td>
                        <td><%= pozycjaZamowien.Ilosc %></td>
                        <td><%= pozycjaZamowien.produkty.Nazwa %></td>
                        <td>
                            <ul class="list-actions">
                                <li><a href="/pozycjaZamowien/details/<%=pozycjaZamowien.IdZamowienieProdukt%>" class="list-actions-button-details">Szczegóły</a></li>
                                <li><a href="/pozycjaZamowien/edit/<%=pozycjaZamowien.IdZamowienieProdukt%>" class="list-actions-button-edit">Edytuj</a></li>
                                <li><a href="/pozycjaZamowien/delete/<%=pozycjaZamowien.IdZamowienieProdukt%>" class="list-actions-button-delete">Usuń</a></li>
                            </ul>
                        </td>
                    </tr>
                <% } %>
                </tbody>
        </table>
        </div>
    </main>

    <p><a class="button-add" href="/pozycjaZamowien/add">Dodaj nową pozycję zamówień</a></p>

    <%- include('../../fragments/footer.ejs') %>
